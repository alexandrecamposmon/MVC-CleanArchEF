@model ChallengeTopic.ApplicationCore.Models.Topic
@{
    ViewData["Title"] = "Delete topic";
}

<div class="text-center">
    <h3 class="display-4">Are you sure you want to delete this topic?</h3>
    <h3 class="display-4">@Model.Title</h3>
</div>
<div class="text-center">
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">No</a>
    <a class="btn btn-danger"  asp-route-id="@Model.Id" asp-controller="Topic" asp-action="Delete">Yes</a>
</div>
