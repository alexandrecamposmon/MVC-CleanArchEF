@model ChallengeTopic.ApplicationCore.Models.Topic
@{
    ViewData["Title"] = "Topic Page";
}

<div class="text-center">
    <h1 class="display-4">Topic</h1>
    <p>Here you can see the full topic.</p>

    <div class="card objCard">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                @Model.Content
            </p>
            <a class="btn btn-primary" asp-route-id="@Model.Id" asp-controller="Topic" asp-action="Index">View full topic</a>
            <a class="btn btn-primary" asp-route-id="@Model.Id" asp-area="" asp-controller="Topic" asp-action="Edit">Edit</a>
            <a class="btn btn-danger" asp-route-id="@Model.Id" asp-area="" asp-controller="Topic" asp-action="DeleteConfirmation">Delete</a>
        </div>
        <div class="card-footer">
            <label>
                Alexandre Campos Montalvão
            </label> -
            <label>
                @Model.CriationDate
            </label>
        </div>
    </div>

    @*<a class="btn btn-primary" asp-area="" asp-controller="Topic" asp-action="Edit">Edit</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Topic" asp-action="DeleteConfirmation">Delete</a>*@
</div>
